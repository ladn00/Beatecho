<Page x:Class="Beatecho.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">
    
    <ScrollViewer>
        <StackPanel Margin="20">
            <!-- Заголовок -->
            <TextBlock Text="Добро пожаловать" Foreground="White" FontSize="24" Margin="0,0,0,20"/>

            <!-- Карточки плейлистов -->
            <WrapPanel>
                <ListView Name="lw1" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Background="Transparent" BorderBrush="Transparent">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel HorizontalAlignment="Center"></WrapPanel>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Width="150" Height="200" Background="#333333" CornerRadius="10" Margin="10">
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Image Source="{Binding Photo}" Width="100" Height="100"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Title}" Foreground="White" Margin="0,10,0,0"/>
                                        <Button Content="|>" Background="Transparent" Foreground="White" FontSize="16" Click="Play"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <Border Width="150" Height="200" Background="#333333" CornerRadius="10" Margin="10">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Image Source="D:\проекты вс\Beatecho\Beatecho\Wins\1.jpg" Width="100" Height="100"/>
                        <TextBlock Text="Плейлист 2" Foreground="White" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
            </WrapPanel>
        </StackPanel>
    </ScrollViewer>
</Page>