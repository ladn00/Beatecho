<Page x:Class="Beatecho.Views.Pages.LocalSongsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Beatecho.Views.Pages"
      xmlns:vm="clr-namespace:Beatecho.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LocalSongsPage" Background="{DynamicResource gradient}">
    <Page.Resources>
        <SolidColorBrush Color="Black" Opacity="0.8" x:Key="black"/>
        <ImageBrush Stretch="Fill" ImageSource="/imgs/backgr2.jpg" x:Key="gradient"/>
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource MainFontColor}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>
    </Page.Resources>
    <Page.DataContext>
        <vm:LocalSongsViewModel/>
    </Page.DataContext>
    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled">
        <Grid Background="{StaticResource black}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image Source="/imgs/folder.png" Margin="30, 20"
                       Width="110" 
                       Height="110" 
                       VerticalAlignment="Top"
                       Grid.Column="0"/>

                <StackPanel Grid.Column="1" 
                          VerticalAlignment="Center" 
                          Margin="20,0,0,0">
                    <TextBlock Text="Песни с вашего устройства" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             Foreground="White"/>
                    <Button Grid.Row="2" Grid.Column="1" Content="Выбрать папку" 
                                    Style="{StaticResource NavButtonStyle}" HorizontalAlignment="Left" 
                                    Margin="0,10,0,0" Command="{Binding SelectFolderCommand}"/>
                </StackPanel>
            </Grid>

            <ListView Grid.Row="1" 
                      Margin="10"
                      Background="Transparent" 
                      BorderThickness="0"
                      Foreground="White"
                      ScrollViewer.VerticalScrollBarVisibility="Disabled"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                      ScrollViewer.CanContentScroll="False"
                      ItemsSource="{Binding LocalSongs}">
                <ListView.Template>
                    <ControlTemplate>
                        <ItemsPresenter />
                    </ControlTemplate>
                </ListView.Template>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Height" Value="45"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListViewItem">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderThickness="0"
                                            Padding="5">
                                        <GridViewRowPresenter />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#33FFFFFF"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.Resources>
                    <Style TargetType="GridViewColumnHeader">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="5"/>
                    </Style>
                </ListView.Resources>

                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="#" Width="30">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>

                                        <Button Background="Transparent"
                                                BorderThickness="0"
                                                Padding="0"
                                                Command="{Binding DataContext.PlaySongCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                CommandParameter="{Binding}">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <ContentPresenter/>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=ListViewItem}}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                            <Image Source="/imgs/play-button.png" 
                                                   Width="12"/>
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>




                        <GridViewColumn Header="Название" Width="500">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <!-- Изображение песни -->
                                        <Image Source="{Binding Photo}" 
                       Width="35" Height="35"

                       Stretch="UniformToFill" 
                       Margin="0,0,10,0"/>
                                        <!-- Название трека -->
                                        <TextBlock Text="{Binding Title}" FontSize="14"
                           VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </ScrollViewer>
</Page>