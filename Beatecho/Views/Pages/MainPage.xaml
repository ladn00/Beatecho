<Page x:Class="Beatecho.Views.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Beatecho.Views.Pages"
      xmlns:vm="clr-namespace:Beatecho.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">
    <Page.DataContext>
        <vm:MainPageViewModel />
    </Page.DataContext>
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="Добро пожаловать" Foreground="White" FontSize="24" Margin="0,0,0,20"/>

            <WrapPanel>
                <ListView Name="lw1" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Background="Transparent" BorderBrush="Transparent" ItemsSource="{Binding Albums}">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel HorizontalAlignment="Center"></WrapPanel>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Width="150" Height="200" Background="#333333" CornerRadius="10" Margin="10">
                                <Border.InputBindings>
                                    <MouseBinding MouseAction="LeftClick" 
                                  Command="{Binding DataContext.OpenAlbumCommand, RelativeSource={RelativeSource AncestorType=ListView}}" 
                                  CommandParameter="{Binding}" />
                                </Border.InputBindings>
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Image Source="{Binding Photo}" Width="100" Height="100"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Title}" Foreground="White" Margin="0,10,0,0"/>
                                        <Button Content="▶" Background="Transparent" Foreground="White" FontSize="16" Command="{Binding DataContext.PlayPauseAlbumCommand, RelativeSource={RelativeSource AncestorType=ListView}}" 
        CommandParameter="{Binding}" />
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <Border Width="150" Height="200" Background="#333333" CornerRadius="10" Margin="10">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Image Source="D:\проекты вс\Beatecho\Beatecho\Wins\1.jpg" Width="100" Height="100"/>
                        <TextBlock Text="Плейлист 2" Foreground="White" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
            </WrapPanel>
        </StackPanel>
    </ScrollViewer>
</Page>