<Page x:Class="Beatecho.Views.Pages.SearchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Beatecho.Views.Pages"
      xmlns:vm="clr-namespace:Beatecho.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SearchPage">
    <Page.DataContext>
        <vm:SearchViewModel />
    </Page.DataContext>
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="Результаты поиска" Foreground="White" FontSize="24" Margin="0,0,0,20"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Песни" Foreground="White" FontSize="20" Margin="0,10,0,10"/>
                    <ListView ItemsSource="{Binding FilteredSongs}" Background="Transparent" BorderBrush="Transparent">
                        
                        <ListView.Template>
                            <ControlTemplate>
                                <ItemsPresenter />
                            </ControlTemplate>
                        </ListView.Template>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Height" Value="45"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListViewItem">
                                            <Border Background="{TemplateBinding Background}"
                                            BorderThickness="0"
                                            Padding="5">
                                                <GridViewRowPresenter />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#33FFFFFF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListView.ItemContainerStyle>

                        <ListView.Resources>
                            <Style TargetType="GridViewColumnHeader">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                        </ListView.Resources>

                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="#" Width="30">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid>

                                                <Button Background="Transparent"
                                                BorderThickness="0"
                                                Padding="0"
                                                Command="{Binding DataContext.PlaySongCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                CommandParameter="{Binding}">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="Button">
                                                                        <ContentPresenter/>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=ListViewItem}}" Value="True">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                    <Image Source="/imgs/play-button.png" 
                                                   Width="12"/>
                                                </Button>
                                            </Grid>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="Название" Width="500">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <!-- Изображение песни -->
                                                <Image Source="{Binding Photo}" 
                       Width="35" Height="35"

                       Stretch="UniformToFill" 
                       Margin="0,0,10,0"/>
                                                <!-- Название трека -->
                                                <TextBlock Text="{Binding Title}" FontSize="14"
                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>


                                <GridViewColumn Header="Длительность" 
                                      DisplayMemberBinding="{Binding Duration}" 
                                      Width="100"/>

                                <GridViewColumn Width="40">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Background="Transparent"
                                            BorderThickness="0"
                                            Padding="5,0"
                                            Command="{Binding DataContext.RemoveFromFavoritesCommand, 
                                                      RelativeSource={RelativeSource AncestorType=ListView}}"
                                            CommandParameter="{Binding}">
                                                <TextBlock Text="❤️" Foreground="Red"
                                                 FontSize="14"/>
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Opacity" Value="0.6"/>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Opacity" Value="1"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Width="70">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="..." 
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Foreground="White"
                                            Padding="5,0"
                                            HorizontalAlignment="Right"
                                            Click="Button_Click">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=ListViewItem}}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                                <Button.ContextMenu>
                                                    <ContextMenu DataContext="{Binding PlacementTarget.DataContext, 
RelativeSource={RelativeSource Self}}">
                                                        <MenuItem Header="Добавить в плейлист"
                         Click="AddSongToPlaylist"/>
                                                    </ContextMenu>
                                                </Button.ContextMenu>
                                            </Button>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
                <StackPanel Grid.Column="1">
                <TextBlock Text="Альбомы" Foreground="White" FontSize="20" Margin="0,10,0,10"/>
                    <ListView ItemsSource="{Binding FilteredAlbums}" Background="Transparent" BorderBrush="Transparent">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Width="150" Height="200" Background="#333333" CornerRadius="10" Margin="10" Padding="5,10">
                                <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center">
                                    <Image Source="{Binding Photo}" Width="135" Height="135" Stretch="UniformToFill"/>
                                    <TextBlock Text="{Binding Title}" Foreground="White" Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

            </StackPanel>
            </Grid>
            <TextBlock Text="Артисты" Foreground="White" FontSize="20" Margin="0,10,0,10"/>
            <ListView ItemsSource="{Binding FilteredArtists}" Background="Transparent" BorderBrush="Transparent">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Width="150" Height="150" Background="#333333" CornerRadius="10" Margin="10" Padding="5,10">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding Name}" Foreground="White" FontSize="16"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <TextBlock Text="Плейлисты" Foreground="White" FontSize="20" Margin="0,10,0,10"/>
            <ListView ItemsSource="{Binding FilteredPlaylists}" Background="Transparent" BorderBrush="Transparent">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Width="150" Height="200" Background="#333333" CornerRadius="10" Margin="10" Padding="5,10">
                            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center">
                                <Image Source="{Binding PlaylistPhoto}" Width="135" Height="135" Stretch="UniformToFill"/>
                                <TextBlock Text="{Binding Title}" Foreground="White" Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </ScrollViewer>
</Page>